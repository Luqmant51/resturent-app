<%- include('../partials/headeradmin') %>

  <div class="hero_area">
    <div class="container mt-5">
      <h2>All Orders</h2>

      <% if (orders.length> 0) { %>
        <table class="table table-striped table-bordered table-hover">
          <thead class="thead-dark">
            <tr>
              <th>Order ID</th>
              <th>User Name</th>
              <th>User Email</th>
              <th>Menu Item</th>
              <th>Price</th>
              <th>Quantity</th>
              <th>Total</th>
              <th>Status</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% orders.forEach(order=> { %>
              <tr>
                <td>
                  <%= order.order_id %>
                </td>
                <td>
                  <%= order.user?.user_name || 'N/A' %>
                </td>
                <td>
                  <%= order.user?.user_email || 'N/A' %>
                </td>
                <td>
                  <%= order.menu?.food_name || 'N/A' %>
                </td>
                <td>$<%= order.menu?.price %>
                </td>
                <td>
                  <%= order.quantity %>
                </td>
                <td>$<%= order.total_price %>
                </td>
                <td>
                  <% if (order.status==='pending' ) { %>
                    <span class="badge bg-warning text-dark">Pending</span>
                    <% } else if (order.status==='confirmed' ) { %>
                      <span class="badge bg-success">Confirmed</span>
                      <% } else if (order.status==='delivered' ) { %>
                        <span class="badge bg-primary">Delivered</span>
                        <% } else { %>
                          <span class="badge bg-secondary">
                            <%= order.status %>
                          </span>
                          <% } %>
                </td>
                <td>
                  <% if (order.status !=='confirmed' ) { %>
                    <button class="btn btn-sm btn-success confirm-order"
                      data-id="<%= order.order_id %>">Confirm</button>
                    <% } %>
                      <button class="btn btn-sm btn-danger delete-order" data-id="<%= order.order_id %>">Delete</button>
                </td>
              </tr>
              <% }) %>
          </tbody>
        </table>
        <% } else { %>
          <p>No orders found.</p>
          <% } %>
    </div>
  </div>
  
  <script>
    document.addEventListener('DOMContentLoaded', () => {
      document.querySelectorAll('.confirm-order').forEach(btn => {
        btn.addEventListener('click', async () => {
          const id = btn.getAttribute('data-id');
          if (confirm('Mark this order as confirmed?')) {
            const res = await fetch(`/orders/${id}/confirm`, { method: 'POST' });
            const data = await res.json();
            if (data.success) location.reload();
            else alert(data.message);
          }
        });
      });

      document.querySelectorAll('.delete-order').forEach(btn => {
        btn.addEventListener('click', async () => {
          const id = btn.getAttribute('data-id');
          if (confirm('Delete this order?')) {
            const res = await fetch(`/orders/${id}`, { method: 'DELETE' });
            const data = await res.json();
            if (data.success) location.reload();
            else alert(data.message);
          }
        });
      });
    });
  </script>

  <style>
    /* Optional: Customize badge colors if not using Bootstrap 5 */
    .badge.bg-warning {
      background-color: #ffc107;
      color: #212529;
    }

    .badge.bg-success {
      background-color: #198754;
    }

    .badge.bg-primary {
      background-color: #0d6efd;
    }

    .badge.bg-secondary {
      background-color: #6c757d;
    }
  </style>

  <%- include('../partials/footer') %>